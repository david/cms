#!/bin/sh
set -eu

cd -P -- "$(dirname -- "$0")"

export SECRET_KEY_BASE=$(cat $SECRET_KEY_BASE_FILE)
export DATABASE_URL=$(cat $DATABASE_URL_FILE)

export EMAIL_SES_REGION=$(cat $EMAIL_SES_REGION_FILE)
export EMAIL_SES_ACCESS_KEY=$(cat $EMAIL_SES_ACCESS_KEY_FILE)
export EMAIL_SES_SECRET=$(cat $EMAIL_SES_SECRET_FILE)
export EMAIL_DEFAULT_SENDER_ADDRESS=$(cat $EMAIL_DEFAULT_SENDER_ADDRESS_FILE)
export EMAIL_DEFAULT_SENDER_NAME=$(cat $EMAIL_DEFAULT_SENDER_NAME_FILE)

./migrate

PHX_SERVER=true exec ./cms start
